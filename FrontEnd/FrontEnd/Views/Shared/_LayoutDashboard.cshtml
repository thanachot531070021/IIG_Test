    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body class="app sidebar-mini rtl">
    <!-- Navbar-->
    <header class="app-header">
        <a class="app-header__logo" href="index.html">User</a>
        <!-- Sidebar toggle button--><a class="app-sidebar__toggle" href="#" data-toggle="sidebar" aria-label="Hide Sidebar"></a>
        <!-- Navbar Right Menu-->
        <ul class="app-nav">
            <!-- User Menu-->
            <li class="dropdown">
                <a class="app-nav__item" href="#" data-toggle="dropdown" aria-label="Open Profile Menu"><i class="fa fa-user fa-lg"></i></a>
                <ul class="dropdown-menu settings-menu dropdown-menu-right">
                    <li><a class="dropdown-item" href="@Url.Action("Profile","DashBoard")"><i class="fa fa-user fa-lg"></i> Profile</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("Index","Home")"><i class="fa fa-sign-out fa-lg"></i> Logout</a></li>
                </ul>
            </li>
        </ul>
    </header>
    <!-- Sidebar menu-->
    <div class="app-sidebar__overlay" data-toggle="sidebar"></div>
    <aside class="app-sidebar">
        <ul class="app-menu">
            <li>
                <a class="app-menu__item" href="@Url.Action("DashBoard","DashBoard")">
                    <i class="app-menu__icon fa fa-user">
                    </i><span class="app-menu__label">สมาชิก</span>
                </a>

                <a class="app-menu__item" href="@Url.Action("Profile","DashBoard")">
                    <i class="app-menu__icon fa fa-id-card-o">
                    </i><span class="app-menu__label">โปรไฟล์</span>
                </a>
            </li>
        </ul>
    </aside>

    <main class="app-content">

        @RenderBody()
    </main>
    <!-- Essential javascripts for application to work-->
    <script src="~/Scripts/js/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/js/popper.min.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <script src="~/Scripts/js/main.js"></script>
    <!-- The javascript plugin to display page loading on top-->
    <script src="~/Scripts/js/plugins/pace.min.js"></script>
    <!-- Page specific javascripts-->
